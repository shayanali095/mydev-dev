
  /* //////////////////////////////
//////////////////////////////load more styling //////////////////
////////////////////// */

.load-more_wrap{ 
    text-align: center;
   }
   .load-more_wrap img{
    width: 30px;
   }
   ul.pagination{
    display: none !important;
   }
   
   
   
  .js-load-more{
    background: transparent;
    border: 2px solid rgb(235, 235, 235);
    border-radius: 25px;
    width: 166px;
    height: 42px;
  }
  
  .js-load-more span{
    color: rgb(204, 102, 102);
    font-size: 14px;
  }
  
  .js-load-more:hover {
    background-color: rgb(204, 102, 102);
    border: none;
  }
  
  .js-load-more:hover span  {
    color: white;
  }
  .loadMoreHide
  {
    display: none;
  }
  .loadMoreShow{
    display: block;
  }
  .pagination{
    display: flex;
    flex-direction: row;
    justify-content: center;
  }

  .load_more_btn button {
    background: transparent;
    border: 2px solid rgb(235, 235, 235);
    border-radius: 25px;
    width: 166px;
    height: 42px;
}