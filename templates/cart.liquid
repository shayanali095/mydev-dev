{% layout none %}

<style>
  .cart-page {
    padding: 40px;
    max-width: 1000px;
    margin: auto;
  }

  .cart-page h1 {
    font-size: 2rem;
    margin-bottom: 20px;
  }

  .cart-table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
  }

  .cart-table th,
  .cart-table td {
    padding: 20px 0;
    border-bottom: 1px solid #eee;
  }

  .cart-table thead tr {
    border-bottom: 1px solid #ccc;
  }

  .cart-product {
    display: flex;
    align-items: center;
    gap: 15px;
  }

  .cart-product img {
    border-radius: 5px;
  }

  .cart-product a {
    font-weight: bold;
    color: #333;
    text-decoration: none;
  }

  .cart-variant {
    color: #666;
  }

  .cart-qty input {
    width: 60px;
    padding: 6px;
    text-align: center;
  }

  .cart-remove {
    text-align: right;
  }

  .cart-remove a {
    color: red;
    text-decoration: none;
  }

  .cart-bottom {
    margin-top: 30px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .update-button {
    padding: 10px 20px;
    background-color: #333;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
  }

  .checkout-button {
    padding: 12px 24px;
    background-color: #6ec1e4;
    color: white;
    font-weight: bold;
    text-decoration: none;
    border-radius: 30px;
  }

  .empty-cart {
    margin-top: 20px;
  }

  .empty-cart a {
    text-decoration: underline;
  }
</style>

<div class="cart-page">
  <h1>Your Cart</h1>

  {% if cart.item_count > 0 %}
    <form action="/cart" method="post" novalidate>
      <table class="cart-table">
        <thead>
          <tr>
            <th style="text-align: left;">Product</th>
            <th style="text-align: center;">Quantity</th>
            <th style="text-align: right;">Total</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {% for item in cart.items %}
            <tr>
              <td>
  <div class="cart-product">
    <div style="display: flex; flex-direction: column; align-items: center;">
      <img src="{{ item.image | image_url: width: 100 }}" width="70" height="70" style="margin-bottom: 8px;">

      <form method="post" action="/cart/change">
        <input type="hidden" name="line" value="{{ forloop.index }}">
        <input type="hidden" name="quantity" value="{{ item.quantity | plus: 1 }}">
        <button type="submit" class="update-button" style="padding: 6px 12px; background: #6ec1e4; color: #fff; font-size: 0.8rem; border-radius: 20px;"> Procced to Checkout</button>
      </form>
    </div>

    <div>
      <a href="{{ item.url }}">{{ item.product.title }}</a><br>
      {% if item.variant.title != 'Default Title' %}
        <span class="cart-variant">{{ item.variant.title }}</span>
      {% endif %}
    </div>
  </div>
</td>


              <td class="cart-qty" style="text-align: center;">
                <input type="number" name="updates[]" value="{{ item.quantity }}" min="0">
              </td>

              <td style="text-align: right;">
                {{ item.line_price | money }}
              </td>

              <td class="cart-remove">
                <a href="/cart/change?line={{ forloop.index }}&quantity=0">Remove</a>
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>

      <div class="cart-bottom">
        <button type="submit" class="update-button">Update Cart</button>
        <h2>Total: {{ cart.total_price | money }}</h2>
      </div>

      <div style="margin-top: 30px; text-align: right;">
        <a href="/checkout" class="checkout-button">All items Proceed to Checkout</a>
      </div>
    </form>
  {% else %}
    <div class="empty-cart">
      <p>Your cart is currently empty.</p>
      <a href="/">Continue Shopping</a>
    </div>
  {% endif %}
</div>
