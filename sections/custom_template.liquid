<div class="hero-section">
  {% if section.settings.hero_video_url != blank %}
    <div class="hero-video">
      <iframe 
        src="{{ section.settings.hero_video_url }}" 
        frameborder="0" 
        allowfullscreen
        width="100%" 
        height="500px">
      </iframe>
    </div>

  {% elsif section.settings.hero_video != blank %}
    <!-- Uploaded video -->
    <video autoplay muted loop playsinline width="100%" height="auto">
      <source src="{{ section.settings.hero_video | video_url }}" type="video/mp4">
      Your browser does not support the video tag.
    </video>

  {% elsif section.settings.hero_background != blank %}
    <!-- Fallback image -->
    <img 
      src="{{ section.settings.hero_background | image_url: width: 1600 }}" 
      alt="Hero Image" 
      loading="lazy"
      style="width: 100%; height: auto;"
    >
  {% endif %}
</div>





{% schema %}
{
  "name": "Templates",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_background",
      "label": "Hero Background Image"
    },
    {
      "type": "video",
      "id": "hero_video",
      "label": "Hero Background Video"
    },
    {
      "type": "url",
      "id": "hero_video_url",
      "label": "Hero Video (YouTube or Vimeo)"
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}



