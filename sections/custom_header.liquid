<h1>
  {% if section.settings.logo != blank %}
    <img 
      src="{{ section.settings.logo | image_url: width: 200 }}" 
      alt="Logo" 
      style="max-width: 100%; height: auto;"
    >
  {% else %}
    {{ shop.name }}
  {% endif %}
</h1>

{% schema %}
{
 
  "name": "Header",
   "tag": "header",
  "settings": [
     {
      "type": "header",
      "content": "Header"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Upload your logo"
    }
  ],
  "presets": [
    {
      "name": "Header"
    }
  ]
}
{% endschema %}

