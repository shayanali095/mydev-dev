<div style="display: flex; align-items: center; justify-content: space-between; flex-wrap: wrap; padding: 10px 20px;">
  {% if section.settings.logo_position == 'left' %}
    <!-- Logo Left -->
    <div style="flex: 1; text-align: left;">
      {% unless section.settings.show_logo %}
        {% if section.settings.logo != blank %}
          <span
            style="
              display: inline-block;
              padding-top: {{ section.settings.logo_padding_top }}px;
              padding-right: {{ section.settings.logo_padding_right }}px;
              padding-bottom: {{ section.settings.logo_padding_bottom }}px;
              padding-left: {{ section.settings.logo_padding_left }}px;
            "
          >
            <img 
              src="{{ section.settings.logo | image_url: width: section.settings.logo_width }}" 
              alt="{{ section.settings.logo.alt | default: shop.name }}" 
              style="width: {{ section.settings.logo_width }}px !important; max-width: 100%; height: auto;"
              loading="lazy"
              width="{{ section.settings.logo_width }}"
            >
          </span>
        {% else %}
          <span style="font-size: {{ section.settings.menu_font }}px;">
            {{ shop.name }}
          </span>
        {% endif %}
      {% endunless %}
    </div>
    <nav class="main-menu" style="flex-shrink: 0;">
      <ul style="list-style: none; display: flex; gap: 20px; margin: 0; padding: 0;">
        {% for link in linklists[section.settings.main_menu].links %}
          <li>
            <a href="{{ link.url }}" style="text-decoration: none; font-size: {{ section.settings.menu_font }}px; color: #000;">
              {{ link.title }}
            </a>
          </li>
        {% endfor %}
      </ul>
    </nav>

  {% elsif section.settings.logo_position == 'right' %}
    <!-- Menu Left -->
    <nav class="main-menu" style="flex-shrink: 0;">
      <ul style="list-style: none; display: flex; gap: 20px; margin: 0; padding: 0;">
        {% for link in linklists[section.settings.main_menu].links %}
          <li>
            <a href="{{ link.url }}" style="text-decoration: none; font-size: {{ section.settings.menu_font }}px; color: #000;">
              {{ link.title }}
            </a>
          </li>
        {% endfor %}
      </ul>
    </nav>
    <!-- Logo Right -->
    <div style="flex: 1; text-align: right;">
      {% unless section.settings.show_logo %}
        {% if section.settings.logo != blank %}
          <span
            style="
              display: inline-block;
              padding-top: {{ section.settings.logo_padding_top }}px;
              padding-right: {{ section.settings.logo_padding_right }}px;
              padding-bottom: {{ section.settings.logo_padding_bottom }}px;
              padding-left: {{ section.settings.logo_padding_left }}px;
            "
          >
            <img 
              src="{{ section.settings.logo | image_url: width: section.settings.logo_width }}" 
              alt="{{ section.settings.logo.alt | default: shop.name }}" 
              style="width: {{ section.settings.logo_width }}px !important; max-width: 100%; height: auto;"
              loading="lazy"
              width="{{ section.settings.logo_width }}"
            >
          </span>
        {% else %}
          <span style="font-size: {{ section.settings.menu_font }}px;">
            {{ shop.name }}
          </span>
        {% endif %}
      {% endunless %}
    </div>

  {% else %}
    <!-- Center Logo -->
    <div style="width: 100%; text-align: center;">
      {% unless section.settings.show_logo %}
        {% if section.settings.logo != blank %}
          <span
            style="
              display: inline-block;
              padding-top: {{ section.settings.logo_padding_top }}px;
              padding-right: {{ section.settings.logo_padding_right }}px;
              padding-bottom: {{ section.settings.logo_padding_bottom }}px;
              padding-left: {{ section.settings.logo_padding_left }}px;
            "
          >
            <img 
              src="{{ section.settings.logo | image_url: width: section.settings.logo_width }}" 
              alt="{{ section.settings.logo.alt | default: shop.name }}" 
              style="width: {{ section.settings.logo_width }}px !important; max-width: 100%; height: auto;"
              loading="lazy"
              width="{{ section.settings.logo_width }}"
            >
          </span>
        {% else %}
          <span style="font-size: {{ section.settings.menu_font }}px;">
            {{ shop.name }}
          </span>
        {% endif %}
      {% endunless %}
    </div>
    <nav class="main-menu" style="width: 100%; text-align: center; margin-top: 10px;">
      <ul style="list-style: none; display: inline-flex; gap: 20px; margin: 0; padding: 0;">
        {% for link in linklists[section.settings.main_menu].links %}
          <li>
            <a href="{{ link.url }}" style="text-decoration: none; font-size: {{ section.settings.menu_font }}px; color: #000;">
              {{ link.title }}
            </a>
          </li>
        {% endfor %}
      </ul>
    </nav>
  {% endif %}
</div>

{% schema %}
{
  "name": "Header",
  "tag": "header",
  "class": "header-section",
  "settings": [
    {
      "type": "header",
      "content": "Header Settings"
    },
    {
      "type": "select",
      "id": "logo_position",
      "label": "Logo Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "left"
    },
    {
      "type": "range",
      "id": "logo_padding_top",
      "label": "Logo Padding Top (px)",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 10
    },
    {
      "type": "range",
      "id": "logo_padding_right",
      "label": "Logo Padding Right (px)",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 10
    },
    {
      "type": "range",
      "id": "logo_padding_bottom",
      "label": "Logo Padding Bottom (px)",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 10
    },
    {
      "type": "range",
      "id": "logo_padding_left",
      "label": "Logo Padding Left (px)",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 10
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Upload Logo"
    },
    {
      "type": "range",
      "id": "logo_width",
      "label": "Logo Width (px)",
      "min": 50,
      "max": 400,
      "step": 10,
      "default": 200
    },
    {
      "type": "checkbox",
      "id": "show_logo",
      "label": "Hide logo on home page",
      "default": false
    },
    {
      "type": "link_list",
      "id": "main_menu",
      "label": "Main Menu"
    },
    {
      "type": "range",
      "id": "menu_font",
      "label": "Menu Font Size (px)",
      "min": 10,
      "max": 40,
      "step": 1,
      "default": 16
    }
  ],
  "presets": [
    {
      "name": "Header"
    }
  ]
}
{% endschema %}
