<h1 style="text-align: {{ section.settings.logo_position }};">
  {% if section.settings.logo != blank %}
    <img 
      src="{{ section.settings.logo | image_url: width: section.settings.logo_width }}" 
      alt="Logo" 
      style="max-width: 100%; height: auto;"
    >
  {% else %}
    {{ shop.name }}
  {% endif %}
</h1>

{% schema %}
{
  "name": "Header",
  "tag": "header",
  "class": "header-section",
  "settings": [
    {
      "type": "header",
      "content": "üß© Header Settings"
    },
    {
      "type": "select",
      "id": "logo_position",
      "label": "Logo Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "üñºÔ∏è Logo"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Upload Logo"
    },
    {
      "type": "range",
      "id": "logo_width",
      "label": "Logo Width (px)",
      "min": 50,
      "max": 400,
      "step": 10,
      "default": 200
    }
  ],
  "presets": [
    {
      "name": "Header"
    }
  ]
}
{% endschema %}
