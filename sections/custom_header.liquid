<h1 style="
  text-align: {{ section.settings.logo_position }};
  padding-top: {{ section.settings.logo_padding_top }}px;
  padding-right: {{ section.settings.logo_padding_right }}px;
  padding-bottom: {{ section.settings.logo_padding_bottom }}px;
  padding-left: {{ section.settings.logo_padding_left }}px;
">
  {% if section.settings.show_logo and section.settings.logo != blank %}
    <span>
      <img 
        src="{{ section.settings.logo | image_url: width: section.settings.logo_width }}" 
        alt="Logo" 
        style="max-width: 100%; height: auto;"
      >
    </span>
  {% else %}
    <span>{{ shop.name }}</span>
  {% endif %}
</h1>

  {% if section.settings.logo != blank %}
    <span>
      <img 
        src="{{ section.settings.logo | image_url: width: section.settings.logo_width }}" 
        alt="Logo" 
        style="max-width: 100%; height: auto;"
      >
    </span>
  {% else %}
    <span>{{ shop.name }}</span>
  {% endif %}

{% schema %}
{
  "name": "Header",
  "tag": "header",
  "class": "header-section",
  "settings": [
    {
      "type": "header",
      "content": "Header Settings"
    },
    {
      "type": "select",
      "id": "logo_position",
      "label": "Logo Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" },
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "logo_padding_top",
      "label": "Logo Padding Top (px)",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 10
    },
    {
      "type": "range",
      "id": "logo_padding_right",
      "label": "Logo Padding Right (px)",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 10
    },
    {
      "type": "range",
      "id": "logo_padding_bottom",
      "label": "Logo Padding Bottom (px)",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 10
    },
    {
      "type": "range",
      "id": "logo_padding_left",
      "label": "Logo Padding Left (px)",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 10
    },
    {
      "type": "header",
      "content": " Logo"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Upload Logo"
    },
    {
      "type": "range",
      "id": "logo_width",
      "label": "Logo Width (px)",
      "min": 50,
      "max": 400,
      "step": 10,
      "default": 200
    },
    {
      "type": "header" ,
    "content": "Visibility" 
    },
    {
  "type": "checkbox",
  "id": "show_logo",
  "label": "Show Logo",
  "default": true
}

    
  ],
  "presets": [
    {
      "name": "Header"
    }
  ]
}
{% endschema %}
