<h1 style="
  text-align: {{ section.settings.logo_position }};
  padding-top: {{ section.settings.logo_padding_top }}px;
  padding-right: {{ section.settings.logo_padding_right }}px;
  padding-bottom: {{ section.settings.logo_padding_bottom }}px;
  padding-left: {{ section.settings.logo_padding_left }}px;
  font-size: {{ section.settings.menu_font }}px;
">
  {% unless section.settings.show_logo %}
    {% if section.settings.logo != blank %}
      <img 
        src="{{ section.settings.logo | image_url: width: section.settings.logo_width }}" 
        alt="{{ section.settings.logo.alt | default: shop.name }}" 
        style="width: {{ section.settings.logo_width }}px !important; max-width: 100%; height: auto;"
        loading="lazy"
        width="{{ section.settings.logo_width }}"
      >
    {% else %}
      {{ shop.name }}
    {% endif %}
  {% endunless %}
</h1>


<!-- Home Logo - This duplicate section should probably be removed -->
{% if section.settings.logo != blank %}
  <span>
    <img 
      src="{{ section.settings.logo | image_url: width: section.settings.logo_width }}" 
      alt="{{ section.settings.logo.alt | default: shop.name }}" 
      style="width: {{ section.settings.logo_width }}px; max-width: 100%; height: auto;"
      loading="lazy"
      width="{{ section.settings.logo_width }}"
    >
  </span>

<!-- Main Menu -->
{% if section.settings.main_menu != blank %}
  <nav class="main-menu" style="display" : flex>
    <ul>
      {% for link in linklists[section.settings.main_menu].links %}
        <li>
          <a href="{{ link.url }}">{{ link.title }}</a>
        </li>
      {% endfor %}
    </ul>
  </nav>


  
{% endif %}

  
{% endif %}


{% schema %}
{
  "name": "Header",
  "tag": "header",
  "class": "header-section",
  "settings": [
    {
      "type": "header",
      "content": "Header Settings"
    },
    {
      "type": "select",
      "id": "logo_position",
      "label": "Logo Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "checkbox",
      "id": "show_logo_settings",
      "label": "Show Logo Settings",
      "default": true
    },
    {
      "type": "range",
      "id": "logo_padding_top",
      "label": "Logo Padding Top (px)",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 10
    },
    {
      "type": "range",
      "id": "logo_padding_right",
      "label": "Logo Padding Right (px)",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 10
    },
    {
      "type": "range",
      "id": "logo_padding_bottom",
      "label": "Logo Padding Bottom (px)",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 10
    },
    {
      "type": "range",
      "id": "logo_padding_left",
      "label": "Logo Padding Left (px)",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 10
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Upload Logo"
    },
    {
      "type": "range",
      "id": "logo_width",
      "label": "Logo Width (px)",
      "min": 50,
      "max": 400,
      "step": 10,
      "default": 200
    },
    {
      "type": "checkbox",
      "id": "show_logo",
      "label": "Hide logo on home page",
      "default": true
    },
  
    {
      "type": "link_list",
      "id": "main_menu",
      "label": "Main Menu"
    }
  ],
  "presets": [
    {
      "name": "Header"
    }
  ]
}
{% endschema %}
